<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fee"
    android:background="@drawable/gradient_two">

    <ImageView
        android:id="@+id/stud_logo2"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="512dp"
        app:srcCompat="@drawable/fe" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="480dp"
        android:text="   Total Fee"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stud_totalfee"
        android:layout_width="283dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="420dp"
        android:gravity="center"
        android:text="Fee"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="340dp"
        android:text="   Fee Paid"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stud_feepaid"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="280dp"
        android:gravity="center"
        android:text="Fee Paid"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="200dp"
        android:text="    Balance"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stud_balancefee"
        android:layout_width="283dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="140dp"
        android:gravity="center"
        android:text="   Balance Fee"
        android:textColor="#000000"
        android:textSize="20dp" />


</RelativeLayout>